{
    "name": "app",
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "prepare:esbuild": "node scripts/prepare-esbuild.mjs",
        "build": "npm run prepare:esbuild && set ESBUILD_BINARY_PATH=%CD%\\.esbuild\\esbuild.exe&& tsc -b && vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "pretest:e2e": "cross-env VITE_SKIP_AUTH=true VITE_DISABLE_LIVE_AUDIO=true VITE_DISABLE_AUTH=true npm run build",
        "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
        "test:unit": "vitest run",
        "test:integration": "vitest run -c vitest.integration.config.ts",
        "test:e2e": "playwright test",
        "prescreenshots": "npm run build",
        "screenshots": "playwright test --config=playwright.screenshots.config.ts",
        "predemo": "npm run build",
        "demo": "node scripts/demo.mjs",
        "push-demo-data": "npx tsx scripts/push-demo-data.ts",
        "delete-demo-data": "npx tsx scripts/delete-demo-data.ts",
        "pretest:user-flow": "cross-env VITE_DISABLE_LIVE_AUDIO=true npm run build",
        "test:user-flow": "playwright test --config=playwright.user-flow.config.ts",
        "pretest:user-flow-image": "cross-env VITE_DISABLE_LIVE_AUDIO=true npm run build",
        "test:user-flow-image": "playwright test --config=playwright.user-flow-image.config.ts",
        "pretest:user-flow-live": "npm run build",
        "test:user-flow-live": "playwright test --config=playwright.user-flow-live.config.ts",
        "deploy": "node scripts/deploy.mjs"
    },
    "dependencies": {
        "@google/genai": "^1.30.0",
        "firebase": "^12.8.0",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-router-dom": "^7.12.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@playwright/test": "^1.57.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.1",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^24.10.1",
        "@types/react": "^19.2.5",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^4.3.1",
        "cross-env": "^7.0.3",
        "dotenv": "^17.2.3",
        "eslint": "^9.39.1",
        "eslint-plugin-react-hooks": "^7.0.1",
        "eslint-plugin-react-refresh": "^0.4.24",
        "ffmpeg-static": "^5.3.0",
        "firebase-admin": "^13.6.0",
        "globals": "^16.5.0",
        "jsdom": "^22.1.0",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.4",
        "vite": "^6.4.1",
        "vitest": "^4.0.17"
    }
}
