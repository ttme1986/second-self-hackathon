rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // User-specific storage paths
    match /users/{userId}/{allPaths=**} {
      // Authenticated users can read/write their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Conversation transcripts
    match /users/{userId}/conversations/{conversationId}/transcript.json {
      // Users can read their own transcripts
      allow read: if request.auth != null && request.auth.uid == userId;
      // Only the system can write transcripts (via admin SDK)
      allow write: if false;
    }

    // Conversation attachments (PDFs, images, etc.)
    match /users/{userId}/conversations/{conversationId}/attachments/{filename} {
      // Users can read and upload their own attachments
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 10 * 1024 * 1024 // Max 10MB
        && (
          request.resource.contentType.matches('image/.*') ||
          request.resource.contentType.matches('application/pdf') ||
          request.resource.contentType.matches('audio/.*') ||
          request.resource.contentType.matches('video/.*')
        );
    }

    // User photos and profile images
    match /users/{userId}/photos/{filename} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024 // Max 5MB
        && request.resource.contentType.matches('image/.*');
    }

    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}